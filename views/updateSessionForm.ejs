<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="flex flex-col items-center justify-center rounded-lg px-4 sm:px-8 lg:px-40 py-8">
    <div id="updateSessionFormContainer" class="bg-gray-100 py-4 px-6 rounded shadow-md w-full mb-4">
        <div class="form-wrapper">
            <form method="post" action="/updateSessionForm" id="updateSessionForm">
                <h2 class="text-2xl font-bold text-center mb-6 text-gray-800">Update Session</h2>

                <!-- Hidden Input for Session ID -->
                <input type="hidden" name="sessionId" value=<%= sessionId %>>

                <!-- Sport Selection -->
                <div class="form-group mb-5">
                    <label for="sport" class="block text-sm font-medium text-gray-700 mb-2">Select Sport</label>
                    <select id="sport" name="sport"
                        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        required>
                        <% sports.forEach(sport => { %>
                            <option value="<%= sport %>"><%= sport %></option>
                        <% }) %>
                    </select>
                </div>

                <!-- Team Details -->
                <div class="flex flex-col sm:flex-row sm:gap-6">
                    <div class="form-group w-full mb-5">
                        <label for="teamA" class="block text-sm font-medium text-gray-700 mb-2">Team A</label>
                        <input type="text" id="teamA" name="teamA" placeholder="Enter team lead name"
                            class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required>
                        <label for="teamASize" class="block text-sm font-medium text-gray-700 mt-3">Team A Size</label>
                        <input type="number" id="teamASize" name="teamASize" placeholder="Enter team size"
                            class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required>
                    </div>
                    <div class="form-group w-full mb-5">
                        <label for="teamB" class="block text-sm font-medium text-gray-700 mb-2">Team B</label>
                        <input type="text" id="teamB" name="teamB" placeholder="Enter team lead name"
                            class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required>
                        <label for="teamBSize" class="block text-sm font-medium text-gray-700 mt-3">Team B Size</label>
                        <input type="number" id="teamBSize" name="teamBSize" placeholder="Enter team size"
                            class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required>
                    </div>
                </div>

                <!-- Actual Team Size -->
                <div class="form-group mb-5">
                    <label for="actualSize" class="block text-sm font-medium text-gray-700 mb-2">Actual Size of a Team</label>
                    <input type="number" id="actualSize" name="actualSize" placeholder="Enter actual size of a team"
                        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        required>
                </div>

                <!-- Place -->
                <div class="form-group mb-5">
                    <label for="place" class="block text-sm font-medium text-gray-700 mb-2">Place</label>
                    <input type="text" id="place" name="place" placeholder="Enter session place"
                        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        required>
                </div>

                <!-- Date and Time -->
                <div class="flex flex-col sm:flex-row sm:gap-6">
                    <div class="form-group w-full mb-5">
                        <label for="date" class="block text-sm font-medium text-gray-700 mb-2">Date</label>
                        <input type="date" id="date" name="date"
                            class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required>
                    </div>
                    <div class="form-group w-full mb-5">
                        <label for="time" class="block text-sm font-medium text-gray-700 mb-2">Time</label>
                        <input type="time" id="time" name="time"
                            class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required>
                    </div>
                </div>

                <!-- Submit Button -->
                <button id="updateButton" type="submit"
                    class="w-full bg-blue-500 text-white p-3 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300 font-bold">
                    Update Session
                </button>
            </form>
        </div>
    </div>
</body>

</html>
